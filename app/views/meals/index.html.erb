<p id="notice"><%= notice %></p>

<h1>Listing Meals</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>When</th>
      <th>Event</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.start_time %> - <%= meal.end_time %></td>
        <td><%= meal.event_id %></td>
        <td><%= link_to 'Show', event_meal_path(@event, meal) %></td>
        <td><%= link_to 'Edit', edit_event_meal_path(@event, meal) %></td>
        <td><%= link_to 'Destroy', event_meal_path(@event, meal), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_event_meal_path(@event) %>
